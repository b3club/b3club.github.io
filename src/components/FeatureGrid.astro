---
interface Item {
  title: string;
  description: string;
  href?: string;
}

interface Props {
  items: Item[];
}

const { items } = Astro.props;
---

<div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
  {items.map((item) => (
    <article class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-glow">
      <h3 class="text-xl font-extrabold text-white">{item.title}</h3>
      <p class="mt-3 text-slate-300">{item.description}</p>
      {item.href && (
        <a href={item.href} class="mt-4 inline-flex font-bold text-builder hover:text-orange-300">Explore â†’</a>
      )}
    </article>
  ))}
</div>
