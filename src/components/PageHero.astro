---
interface Props {
  title: string;
  lead: string;
  eyebrow?: string;
}

const { title, lead, eyebrow } = Astro.props;
---

<section class="border-b border-white/10 bg-grid bg-[size:16px_16px]">
  <div class="mx-auto max-w-6xl px-4 py-14 sm:px-6 lg:px-8 lg:py-20">
    {eyebrow && <p class="mb-3 text-sm font-bold uppercase tracking-[0.2em] text-circuit">{eyebrow}</p>}
    <h1 class="max-w-3xl text-4xl font-black leading-tight sm:text-5xl">{title}</h1>
    <p class="mt-5 max-w-3xl text-lg text-slate-300">{lead}</p>
  </div>
</section>
