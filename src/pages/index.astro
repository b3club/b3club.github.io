---
import BaseLayout from '../layouts/BaseLayout.astro';
import FeatureGrid from '../components/FeatureGrid.astro';

const pillars = [
  {
    title: 'Bricks',
    description: 'Tactile engineering with Lego and Technic to understand structure and mechanics.',
    href: '/curriculum/bricks'
  },
  {
    title: 'Blocks',
    description: 'Digital logic through Scratch and Minecraft systems thinking.',
    href: '/curriculum/blocks'
  },
  {
    title: 'Bots',
    description: 'Hardware integration with micro:bit and Arduino for real-world builds.',
    href: '/curriculum/bots'
  }
];
---

<BaseLayout title="Build. Learn. Connect." description="B3 is a family innovation hub for kids and parents in Cedar Park and Austin.">
  <section class="border-b border-white/10 bg-grid bg-[size:16px_16px]">
    <div class="mx-auto max-w-6xl px-4 py-16 sm:px-6 lg:px-8 lg:py-24">
      <p class="mb-4 text-sm font-bold uppercase tracking-[0.2em] text-circuit">Family Innovation Hub</p>
      <h1 class="max-w-4xl text-5xl font-black leading-tight sm:text-6xl">
        Build. Learn. Connect.
      </h1>
      <p class="mt-5 max-w-3xl text-xl text-slate-300">Where play meets purpose. B3 helps kids ages 6-12 build ambitious projects with active mentorship from their parents.</p>
      <div class="mt-8 flex flex-wrap gap-4">
        <a href="/join" class="rounded-full bg-builder px-6 py-3 font-extrabold text-slate-950 transition hover:bg-orange-300">Join Founding 50</a>
        <a href="/curriculum" class="rounded-full border border-white/20 px-6 py-3 font-bold text-slate-100 transition hover:border-pixel hover:text-pixel">Explore Curriculum</a>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 py-14 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-black">Three Pillars + AI Literacy</h2>
    <p class="mt-3 max-w-3xl text-slate-300">From physical building to software logic to robotics integration, families move through a complete maker pathway with safe AI support.</p>
    <div class="mt-8">
      <FeatureGrid items={pillars} />
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 pb-14 sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-white/10 bg-white/5 p-8 shadow-glow">
      <h2 class="text-3xl font-black">Founding 50 Cohort Waitlist</h2>
      <p class="mt-3 max-w-3xl text-slate-300">Families in Cedar Park and the Austin tech corridor get early access, mentor onboarding, and project showcase invitations.</p>
      <a href="/join" class="mt-6 inline-flex rounded-full bg-pixel px-6 py-3 font-extrabold text-slate-950 transition hover:bg-green-300">Reserve Your Spot</a>
    </div>
  </section>
</BaseLayout>
