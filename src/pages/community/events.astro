---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/PageHero.astro';

const events = [
  {
    date: 'Feb 14, 2026 - 2:00 PM to 4:00 PM',
    title: 'First Experimental Session: Gear Up!',
    location: 'Cedar Park Library - Collaboration Room 290',
    detail: 'This is our first experimental session to try out our curriculum and event format with a small group of families. ',
    agenda: [
      'Warming with Lego time (10m)',
      'Introduction to Scracth Programming (10m)',
      'Scratch project time with mentor support (20m)',
      'Break and play time (10m)',
      'Minecraft Modding intro (10m)',
      'Minecraft modding project time with mentor support (20m)',
      'Break and play time (10m)',
      'Micro:bit intro (10m)',
      'Micro:bit project time with mentor support (20m)',
      'Wrap and feedback (10m)'
    ]
  }
];
---

<BaseLayout title="Events" description="B3 workshops and demo days in Cedar Park and Austin.">
  <PageHero
    eyebrow="Events"
    title="Sessions, Demo Days, and Community Builds"
    lead="Monthly programming designed to help families apply engineering ideas and showcase progress."
  />

  <section class="mx-auto max-w-4xl space-y-4 px-4 py-12 sm:px-6 lg:px-8">
    {events.map((event) => (
      <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
        <p class="text-sm font-bold uppercase tracking-[0.15em] text-pixel">{event.date}</p>
        <h2 class="mt-1 text-2xl font-black">{event.title}</h2>
        <p class="mt-2 text-slate-300">{event.location}</p>
        <p class="mt-3 text-slate-300">{event.detail}</p>
        {Array.isArray(event.agenda) && event.agenda.filter((item) => item.trim().length > 0).length > 0 && (
          <details class="mt-4 rounded-xl border border-white/10 bg-white/5 p-4">
            <summary class="cursor-pointer select-none font-bold text-slate-200">Agenda</summary>
            <ul class="mt-3 list-disc space-y-1 pl-5 text-slate-300">
              {event.agenda
                .filter((item) => item.trim().length > 0)
                .map((agendaItem) => (
                  <li>{agendaItem}</li>
                ))}
            </ul>
          </details>
        )}
      </article>
    ))}
  </section>
</BaseLayout>
