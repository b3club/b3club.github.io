---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import PageHero from '../../../components/PageHero.astro';

export async function getStaticPaths() {
  const posts = await getCollection('project-spotlights');
  return posts.map((post) => ({ params: { slug: post.slug }, props: { post } }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={post.data.title} description={post.data.excerpt}>
  <PageHero eyebrow="Project Spotlight" title={post.data.title} lead={post.data.excerpt} />
  <section class="mx-auto max-w-3xl px-4 py-12 sm:px-6 lg:px-8">
    <article class="prose prose-invert prose-slate rounded-2xl border border-white/10 bg-white/5 p-8">
      <Content />
    </article>
  </section>
</BaseLayout>
