---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/PageHero.astro';
---

<BaseLayout title="Join" description="Join the B3 Family Club waitlist.">
  <PageHero
    eyebrow="Join"
    title="B3 Family Club Membership"
    lead="Apply for early access to B3 programming, mentor onboarding, and project showcases."
  />

  <section class="mx-auto grid max-w-6xl gap-8 px-4 py-12 sm:px-6 lg:grid-cols-2 lg:px-8">
    <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
      <h2 class="text-2xl font-black">Program Fit</h2>
      <ul class="mt-4 list-disc space-y-2 pl-5 text-slate-300">
        <li>Kids ages 6-12 who enjoy building, coding, or experimenting</li>
        <li>Parents ready to actively mentor alongside their child</li>
        <li>Families in Cedar Park or the greater Austin area</li>
      </ul>
    </article>
    <article class="rounded-2xl border border-white/10 bg-white/5 p-6">
      <h2 class="text-2xl font-black">Waitlist Form</h2>
      <form class="mt-4 space-y-3">
        <input class="w-full rounded-lg border border-white/20 bg-slate-900 px-3 py-2 text-white" placeholder="Parent name" />
        <input class="w-full rounded-lg border border-white/20 bg-slate-900 px-3 py-2 text-white" type="email" placeholder="Email" />
        <input class="w-full rounded-lg border border-white/20 bg-slate-900 px-3 py-2 text-white" placeholder="Child age" />
        <input class="w-full rounded-lg border border-white/20 bg-slate-900 px-3 py-2 text-white" placeholder="Interest area" />
        <button class="rounded-full bg-builder px-5 py-2 font-bold text-slate-950" type="button">Join Waitlist</button>
      </form>
      <p class="mt-3 text-sm text-slate-400">Placeholder form for static deployment. Connect to your preferred form backend.</p>
    </article>
  </section>
</BaseLayout>
